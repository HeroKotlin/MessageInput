<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/message_input_bar_border_color" />
        </shape>
    </item>

    <item android:top="1px" android:bottom="1px">
        <shape>
            <padding
                android:left="@dimen/message_input_bar_padding_horizontal"
                android:right="@dimen/message_input_bar_padding_horizontal"
                android:top="@dimen/message_input_bar_padding_vertical"
                android:bottom="@dimen/message_input_bar_padding_vertical"/>

            <solid android:color="@color/message_input_bar_bg_color"/>
        </shape>
    </item>

</layer-list>